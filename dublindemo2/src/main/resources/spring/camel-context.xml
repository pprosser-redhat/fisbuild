<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <!-- You could also define a traditional camel context here -->
    <camelContext id="dublindemo2" xmlns="http://camel.apache.org/schema/spring">
        <route id="pingHello">
            <from id="_from1" uri="timer://foo?period=1000"/>
            <setHeader headerName="CamelHttpMethod" id="_setHeader1">
                <simple>GET</simple>
            </setHeader>
            <to id="_to1" pattern="InOut" uri="netty4-http:http://hellofrompod.apps.penryn.demolab.local:80/demos/hello/pod"/>
            <log id="_log1" message=">>>> ${body}"/>
        </route>
    </camelContext>
</beans>
